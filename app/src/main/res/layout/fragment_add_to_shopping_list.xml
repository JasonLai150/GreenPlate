<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@color/orange"
    tools:context=".views.AddShoppingListScreenFrag">

    <TextView
        android:id="@+id/addShoppingListScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Enter Item" />


    <EditText
        android:id="@+id/addShoppingListEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingredient Name"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="25dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/addShoppingListQuantityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="25dp"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/> <!-- Set input type to number -->

    <EditText
        android:id="@+id/addShoppingListCaloriesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Calories"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="25dp"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/> <!-- Set input type to number -->


    <Button
        android:id="@+id/addShoppingListButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Add"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/addShoppingListBackButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Back"
        android:layout_marginTop="10dp"/>

</LinearLayout>
